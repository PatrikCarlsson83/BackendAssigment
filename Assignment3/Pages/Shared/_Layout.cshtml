<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Make your own playlist and find out where your favorite Artist will have their next show!" />
    <title>@ViewData["Title"] - MusicDive</title>
    <link rel="stylesheet" asp-append-version="true" href="~/css/style.css" />
</head>
<body>
    <header>
        <img id="logo" src="\images\Logo.png" asp-append-version="true" alt="Music Dive logo" />
        <nav>
            <ul>
                <li>
                    <a class="nav-links" asp-page="/Index">Home</a>
                </li>
                <li>
                    <a class="nav-links" asp-page="/Artists/Index">Artists</a>
                </li>
                <li>
                    <a class="nav-links" asp-page="/Concerts/Index">Concerts</a>
                </li>
            </ul>
            <partial name="_LoginPartial" class="nav-links" />
        </nav>
    </header>
    <div class="rendered">
        <main>
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-content">
            &copy; Patrik & Ola <a class="artists-link" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
